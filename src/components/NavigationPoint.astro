---
const {imgSrc, imgAlt, navPointDesc} = Astro.props;
---
<a href="" class="navGrid">
<img src={imgSrc} alt={imgAlt}> <h3>{navPointDesc}</h3>
</a>

<style>
    .navGrid{
        display: grid;
        grid-template-columns: 52px 1fr;
        align-items: center;
        justify-content: middle;
    }
    img{
        color: white;
    }
    h3{
        justify-content: center;
        text-decoration: none;
        color: white;
        margin-top: 10px;
        margin-bottom: 10px;
    }
    a{
        text-decoration: none;
    }
    a:visited{
        text-decoration: none;
    }
</style>